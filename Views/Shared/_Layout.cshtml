<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oficina Conectada</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OficinaConectada.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="menu navbar navbar-expand-sm navbar-toggleable-sm navbar-light position-absolute ">
            <div id="top-menu" class="transparent container-fluid fixed-top">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://i2.wp.com/oficinaconectada.com.br/site/wp-content/uploads/2021/09/oficina-conectada.png?fit=449%2C180&ssl=1" 
                    class="img-fluid" alt="OFICINA CONECTADA" width="35%">
                 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end me-5">
                        <li class="nav-item">
                            <a class="nav-link text-light me-3" onclick="home()">Início</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-light me-3" href="https://www.oficinaconectada.com.br/blog/" target="_blank">Blog</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light me-3" onclick="contact()">Contato</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-light me-3">(31) 2126-7007</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="background border-top text-muted position-relative "> 

        <img src="
        https://images.unsplash.com/photo-1486006920555-c77dcf18193c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=996&q=80
        " class="footer-img img-fluid position-absolute" alt="background image super car">
        
        <div class="container">
            <hr />       
            <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
              <img src="https://i2.wp.com/oficinaconectada.com.br/site/wp-content/uploads/2021/09/oficina-conectada.png?fit=449%2C180&ssl=1" 
               class="img-fluid" alt="OFICINA CONECTADA" width="18%">
            </a>
   
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
